						<li><a href="/games">JRPG</a></li>
						<li><a href="#">MMORPG</a></li>
                    </ul>
					
					
					<!-- Blog item -->
					<% article.forEach(article => { %>
					<div class="blog-item">
						<div class="blog-thumb">
