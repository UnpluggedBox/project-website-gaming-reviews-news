<html>
	<%- include('../partials/head'); %>
	<%- include('../partials/header'); %>
	<title>Unplugged Games Latest News</title>
<body>
<section class="blog-section spad">
		<div class="container">
			<div class="row">
				<div class="col-xl-9 col-lg-8 col-md-7">
					<div class="section-title text-white">
					<br><br>
						<h2>Latest News</h2>
					</div>

                    <!-- Blog item -->
					<% article.forEach(article => { %>
						<div class="blog-item">
							<div class="blog-thumb">
								<img src="data:image/<%= article.image.contentType %>;base64,<%= article.image.data.toString('base64') %>" alt="" style="height: 325; width: 345;">
							</div>
							<div class="blog-text text-box text-white">
								<% if (article.category == 'News') { %>
								<div class="top-meta"><label><%= article.createdAt.toLocaleString() %> | <a href="/newslist"><%= article.category %></a></div>
								<% } else { %>
								<div class="top-meta"><label><%= article.createdAt.toLocaleString() %> | <a href="/reviewlist"><%= article.category %></a></div>
								<% } %>
								<h3 style="overflow: hidden; display: -webkit-box;-webkit-line-clamp: 3; -webkit-box-orient: vertical;"><%= article.title %></h3>
								<p style="overflow: hidden; display: -webkit-box;-webkit-line-clamp: 2; -webkit-box-orient: vertical; color: rgb(255, 255, 255);"><%= article.summary %><b></b>
								</p>
								<a href="/article/<%= article.slug %>" class="read-more">Read More <img src="images/icons/double-arrow.png" alt="#"/></a>
							</div>
						</div>
						<% }) %>
						<!-- Blog item -->
						
					<!-- Next Page -->

					<div style="margin-top: 100px;">
						<!-- Pagination -->
							<div class="container mt-5"><div class="row ">
							<div class="col justify-content-center">
								<div class="d-flex justify-content-center">
								<nav aria-label="...">
									<ul class="pagination pagination-lg">
									
									<% if(pagination.previous) {%>
									<li class="page-item"><a class="page-link" href="/reviewlist/?page=<%= pagination.previous.page %>">Back</a></li>
									<%} else {%>
									<li class="page-item disabled"><a class="page-link">Back</a></li>
									<% } %>
									<li class="page-item disabled">
										<a class="page-link" href="#" tabindex="-1">Page <%= currentpage %></a>
									</li>
									<% if(pagination.next) {%>
										<li class="page-item"><a class="page-link" href="/reviewlist/?page=<%= pagination.next.page %>">Next</a></li>
									<%} else {%>
										<li class="page-item disabled"><a class="page-link">Next</a></li>
										<% } %>
									</ul>
								</nav>
								</div>
							</div>
							</div>
						</div>

					</div>


					</div>
				
				<%- include('../partials/trending'); %>
			</div>
	          </section>

			  <%- include('../partials/footer'); %>


					

    <!--====== Javascripts & Jquery ======-->
	<%- include('../partials/script'); %>
</body>
</html>